<%= content_for(:breadcrumbs) do %>
    <%= govuk_back_link(text: "Back", href: @back_path) %>
<% end %>

<% page_data(title: @page_title, subtitle: @page_subtitle, caption: @page_caption) %>

<%= govuk_summary_list(rows: address_rows(@address)) %>

<% if show_location_section?(@address) %>
  <h2 class="govuk-heading-m">Location</h2>
  <%= govuk_summary_list(rows: location_rows(@address)) %>
<% end %>

<%= govuk_warning_text(text: "Deleting an address is permanent â€“ you cannot undo it.") %>

<%= govuk_button_to("Delete address", @delete_path, method: :delete, warning: true) %>

