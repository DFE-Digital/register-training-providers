<% if addresses.any? %>
  <% address_summary_cards(addresses, provider, include_actions: !provider.archived?).each do |summary_card| %>
    <%= govuk_summary_card(title: summary_card[:title]) do |card|
          if summary_card[:actions].present?
            summary_card[:actions].each do |action|
              card.with_action do
                govuk_link_to(action[:text], action[:href], visually_hidden_text: action[:visually_hidden_text], no_visited_state: true)
              end
            end
          end
          card.with_summary_list(rows: summary_card[:rows])
        end %>
  <% end %>
<% else %>
  <p class="govuk-body">There are no addresses for <%= provider.operating_name %>.</p>
<% end %>
