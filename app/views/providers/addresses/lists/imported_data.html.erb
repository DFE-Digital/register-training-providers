<% page_data(title: "Providers (#{govuk_number(@pagy.count)})") %>

<% content_for :custom_layout do %>

    <% if @providers.empty? %>
      <p class="govuk-body">
        There are no providers.
      </p>
    <% else %>
    <ul class="govuk-list govuk-list--spaced">
      <% @providers.each do |provider| %>
      <li>
        <%= govuk_link_to(provider.operating_name, provider_new_select_path(provider, { debug: true })) %>
      </li>
      <% end %>
    </ul>

      <%= render PaginationDisplay::View.new(pagy: @pagy) %>
    <% end %>

<% end %>
