<%= content_for(:breadcrumbs) do %>
  <%= govuk_back_link(text: "Back", href: providers_path) %>
<% end %>

<% provider_page_data(@provider) %>

<%= content_for(:secondary_navigation) do %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <%= render ProviderNavigation::View.new(provider: @provider, active_tab: "Accreditations", debug_mode: debug_mode?) %>
    </div>
  </div>
<% end %>

<h2 class="govuk-heading-m">
  Accreditations<%= " (#{@accreditations.count})" if @accreditations.any? %>
</h2>

<%= render "accreditations/accreditations_list", accreditations: @accreditations, provider: @provider %>
