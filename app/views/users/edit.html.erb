<%= content_for(:breadcrumbs) do %>
  <%= render GovukComponent::BackLinkComponent.new(
        text: "Back",
        href: params[:goto] == "confirm" ? user_check_path(@user) : user_path(@user),
      ) %>
<% end %>

<%= form_for @user  do  |form| %>
  <% page_data(title: "Change user", subtitle: "personal details", header: false, error: @user.errors.present?) %>

  <%= content_for(:page_alerts) { form.govuk_error_summary } %>
  <%= form.govuk_fieldset legend: { text: "Personal details" }, caption: { text: "User - #{@user.name}" } do %>
    <%= render partial: "fields", locals: { form: } %>
    <%= form.govuk_submit %>
  <% end %>
<% end %>

<p class="govuk-body">
  <%= govuk_link_to("Cancel", user_path(@user)) %>
</p>
